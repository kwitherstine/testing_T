    bridge-vids 402 403 404 405 406

# swp50 cabled to MTS1-19-SPINEB swp25
auto swp50
iface swp50
    bridge-vids 402 403 404 405 406

# swp51 cabled to RR3-05-QOCP-TORB swp51 (cross-link)
auto swp51
iface swp51 inet static
#    address 10.5.254.2
#    netmask 255.255.255.252
#    broadcast 10.5.254.3
    link-speed 40000
    link-duplex full
    link-autoneg off
    bridge-vids 402 403 404 405 406

