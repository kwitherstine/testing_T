# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface
# for vagrant only, commenting out eth0 or it crashes
auto eth0
iface eth0 inet dhcp
#iface eth0 inet static
#    address 10.5.248.11
#    netmask 255.255.255.0
#    gateway 10.5.248.1

# Bridges / VLANs
#------------------

auto bridge
iface bridge
    bridge-vlan-aware yes
    bridge-vids 403 404 405 406
    bridge-ports swp1 swp2 swp3 swp4 swp5 swp6 swp37 swp38 swp39 swp40 swp41 swp42 swp43 swp44 swp49 swp50 swp51 swp52
    bridge-stp on
    bridge-pvid 1

#Admin,PXE VLAN 402
auto bridge.402
iface bridge.402
    address 10.5.249.11/24
    gateway 10.5.249.1

#Storage, VLAN 403
auto bridge.403
iface bridge.403

#Management, VLAN 404
auto bridge.404
iface bridge.404

#Public, VLAN 405
auto bridge.405
iface bridge.405
    address 10.5.252.11/24
    gateway 10.5.252.1

#Private, VLAN 406
auto bridge.406
iface bridge.406

